<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- Upper Content-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/course_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Course_ID"
            />

        <TextView
            android:id="@+id/course_name_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:text="Course_Name"
            />

        <TextView
            android:id="@+id/seats_open_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="Seats_Open"
            />

    </RelativeLayout>


    <!-- Center Content-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/course_full_description_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course_Description"
                android:scrollbars = "vertical"
                />
        </ScrollView>

        <TextView
            android:id="@+id/prereqs_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prereqs_here" />

    </LinearLayout>




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/days_offered_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Days_Offered"
            />

        <TextView
            android:id="@+id/time_slot_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="Time_Slot"
            />

        <TextView
            android:id="@+id/professor_id"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Professor"
            />


    </RelativeLayout>





</LinearLayout>
