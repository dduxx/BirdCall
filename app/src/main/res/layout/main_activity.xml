<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.unb.cs.cs2063g8.birdcall.MainActivity">

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"/>

    <Spinner
        android:id="@+id/faculty_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_below="@id/location_spinner"/>

    <Spinner
        android:id="@+id/level_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_below="@id/faculty_spinner"/>

    <Spinner
        android:id="@+id/start_time_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/level_spinner"/>

    <Spinner
        android:id="@+id/end_time_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/start_time_spinner"
        android:layout_alignParentRight="true"
        android:layout_below="@id/level_spinner"/>
    <Spinner
        android:id="@+id/semester_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:layout_below="@id/start_time_spinner"/>

    <!-- days of week selection -->
    <Button
        android:id="@+id/day_of_week_mon"
        android:text="M"
        android:textColor="@android:color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/day_of_week_button"
        android:layout_toLeftOf="@id/day_of_week_tue"
        android:layout_below="@id/semester_spinner"
        android:textAllCaps="false"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/day_of_week_tue"
        android:text="T"
        android:textColor="@android:color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/day_of_week_button"
        android:layout_toLeftOf="@id/day_of_week_wed"
        android:layout_below="@id/semester_spinner"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/day_of_week_wed"
        android:text="W"
        android:textColor="@android:color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/day_of_week_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/semester_spinner"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/day_of_week_thurs"
        android:text="Th"
        android:textColor="@android:color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/day_of_week_button"
        android:layout_toRightOf="@id/day_of_week_wed"
        android:layout_below="@id/semester_spinner"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/day_of_week_fri"
        android:text="F"
        android:textColor="@android:color/black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/day_of_week_button"
        android:layout_toRightOf="@id/day_of_week_thurs"
        android:layout_below="@id/semester_spinner"
        android:textAllCaps="false"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        />
    <!-- days of week selection ends -->

    <Button
        android:id="@+id/submit_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/submit_button"
        android:layout_below="@id/day_of_week_wed"
        android:layout_alignParentRight="true"
        android:layout_margin="25dp"/>

    <Button
        android:id="@+id/blacklist_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/blacklist_button"
        android:layout_below="@id/day_of_week_wed"
        android:layout_alignParentLeft="true"
        android:layout_margin="25dp"/>
</RelativeLayout>
